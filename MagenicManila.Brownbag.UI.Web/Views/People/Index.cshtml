@model MagenicManila.Brownbag.BusinessObjects.Contracts.IPersonCollectionView

@{
	 this.ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Add", "Add")

<table>
	<thead>
		<tr>
			<th style="width: 50px;"></th>
			<th>Id</th>
			<th>Name</th>
			<th>Gender</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in this.Model)
		{
		<tr>
			<td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
			<td>@item.Id</td>
			<td>@item.FullName</td>
			<td>@item.Gender</td>
		</tr>
		}
	</tbody>
</table>